DISCORD_TOKEN=your_token_here
APPLICATION_ID=123456789012345678
OWNER_ID=123456789012345678 # Optional: ID of the bot owner for admin commands

# LLM Configuration
LLAMA_URL=http://localhost:8080/v1
LLAMA_MODEL=local-model
LLAMA_API_KEY=optional_key_here

# Embedding Configuration (defaults to LLAMA_URL if not set)
EMBEDDING_URL=http://localhost:8080/v1
EMBEDDING_MODEL=local-model
EMBEDDING_API_KEY=optional_key_here

# Database Configuration
DATABASE_URL=data/mascord.db

# Bot Settings
SYSTEM_PROMPT=You are Mascord, a powerful and helpful Discord assistant. You have access to various tools and Model Context Protocol (MCP) servers to perform actions and fetch live data. When a user request requires action (like playing music, searching history, or fetching web content), you MUST use the appropriate tool. Be concise, accurate, and proactive in using your available capabilities. Be a little snarky!
MAX_CONTEXT_MESSAGES=50
STATUS_MESSAGE=Ready to assist!
YOUTUBE_COOKIES=/path/to/cookies.txt

# Context Persistence Settings
CONTEXT_MESSAGE_LIMIT=50
# Set to 0 to disable time filtering (count-only short-term memory).
CONTEXT_RETENTION_HOURS=24

# Timeout & Maintenance Settings
LLM_TIMEOUT_SECS=120
EMBEDDING_TIMEOUT_SECS=30
MCP_TIMEOUT_SECS=60
VOICE_IDLE_TIMEOUT_SECS=300
YOUTUBE_DOWNLOAD_DIR=/tmp/mascord_audio
YOUTUBE_CLEANUP_AFTER_SECS=3600

# External Tool Safety
MCP_TOOLS_REQUIRE_CONFIRMATION=true

# Agent Confirmation UI
AGENT_CONFIRM_TIMEOUT_SECS=300

# Background Embedding Indexer
EMBEDDING_INDEXER_ENABLED=true
EMBEDDING_INDEXER_BATCH_SIZE=25
EMBEDDING_INDEXER_INTERVAL_SECS=30

# Background Summarization
SUMMARIZATION_ENABLED=true
SUMMARIZATION_INTERVAL_SECS=3600
SUMMARIZATION_ACTIVE_CHANNELS_LOOKBACK_DAYS=7
SUMMARIZATION_INITIAL_MIN_MESSAGES=50
SUMMARIZATION_TRIGGER_NEW_MESSAGES=150
SUMMARIZATION_TRIGGER_AGE_HOURS=6
SUMMARIZATION_TRIGGER_MIN_NEW_MESSAGES=20
SUMMARIZATION_MAX_TOKENS=1200
SUMMARIZATION_REFRESH_WEEKS=6
SUMMARIZATION_REFRESH_DAYS_LOOKBACK=14

# Long-term Memory Retention
# Set to 0 to disable cleanup of long-term (RAG) history.
LONG_TERM_RETENTION_DAYS=365

# Rate Limit Optimization
# CRITICAL: Set REGISTER_COMMANDS=true ONLY when you've changed command signatures
# Leaving this true causes command registration on EVERY startup, which can trigger
# Cloudflare IP bans (>10,000 invalid requests in 10 minutes = 1+ hour ban)
# Set DEV_GUILD_ID to register instantly to a specific guild (avoids global daily limit)
REGISTER_COMMANDS=false
DEV_GUILD_ID=YOUR_DEV_GUILD_ID_HERE
