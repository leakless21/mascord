# Mascord Brewfile for macOS
# Install all dependencies: brew bundle

# Core development tools
brew "rustup"           # Rust toolchain
brew "cmake"            # Build system
brew "pkg-config"       # Package configuration

# Media and audio
brew "ffmpeg"           # Audio/video processing
brew "yt-dlp"           # YouTube downloader
brew "opus"             # Audio codec

# Runtime
brew "node"             # Node.js (for MCP servers via npx)

# Optional: local LLM server
# Uncomment if you want llama.cpp:
# brew "llama.cpp"
